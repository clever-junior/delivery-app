{
  "name": "delivery-app-back-end",
  "version": "0.2.0",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "description": "Back-end do projeto App de Delivery",
  "main": "./src/api/server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "private": true,
  "scripts": {
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsup src",
    "test": "mocha src/tests/**/*$NAME*.test.js --exit",
    "test:integration": "mocha src/tests/integration/*.test.js --exit",
    "test:coverage": "nyc --all npm run test",
    "test:coverage:json": "nyc --all --reporter=json-summary npm run test",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json ."
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.1",
    "@hapi/boom": "9.1.4",
    "@prisma/client": "^6.2.1",
    "body-parser": "1.19.2",
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "md5": "2.3.0",
    "multer": "1.4.4",
    "socket.io": "4.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "eslint-config-trybe-backend": "1.0.4",
    "mocha": "9.2.2",
    "nodemon": "2.0.15",
    "nyc": "15.1.0",
    "prisma": "^6.2.1",
    "sinon": "13.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typecript": "^0.0.1-security",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  }
}
